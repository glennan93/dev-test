<h1>Dealerships</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>OEM</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @dealerships.each do |dealership| %>
      <tr>
        <td><%= dealership.name %></td>
        <td><%= dealership.oem %></td>
        <td><%= link_to 'Show', dealership %></td>
        <td><%= link_to 'Edit', edit_dealership_path(dealership) %></td>
        <td><%= link_to 'Destroy', dealership, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>       </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Dealership', new_dealership_path %>
