<h1>Models</h1>
<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= model.make.name if model.make %></td>
        <td><%= model.name %></td>
        <td><%= link_to 'Destroy', model, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Model', new_model_path %>
