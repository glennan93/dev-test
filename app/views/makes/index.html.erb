<h1>Makes</h1>
<table>
  <thead>
    <tr>
      <th>Make</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @makes.each do |make| %>
      <tr>
        <td><%= make.name %></td>
        <td><%= link_to 'Show', make %></td>
        <td><%= link_to 'Edit', edit_make_path(make) %></td>
        <td><%= link_to 'Destroy', make, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Make', new_make_path %> | 
<%= link_to "Home", root_path %>
